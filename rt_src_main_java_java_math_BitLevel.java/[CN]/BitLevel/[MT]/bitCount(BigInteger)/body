{
  int bCount=0;
  if (val.sign == 0) {
    return 0;
  }
  int i=val.getFirstNonzeroDigit();
  ;
  if (val.sign > 0) {
    for (; i < val.numberLength; i++) {
      bCount+=Integer.bitCount(val.digits[i]);
    }
  }
 else {
    bCount+=Integer.bitCount(-val.digits[i]);
    for (i++; i < val.numberLength; i++) {
      bCount+=Integer.bitCount(~val.digits[i]);
    }
    bCount=(val.numberLength << 5) - bCount;
  }
  return bCount;
}
