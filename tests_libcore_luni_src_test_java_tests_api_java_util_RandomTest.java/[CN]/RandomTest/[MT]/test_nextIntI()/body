{
  final int range=10;
  int lastNum=r.nextInt(range);
  int nextNum;
  boolean someDifferent=false;
  boolean inRange=true;
  for (int counter=0; counter < 100; counter++) {
    nextNum=r.nextInt(range);
    if (nextNum != lastNum)     someDifferent=true;
    if (!(0 <= nextNum && nextNum < range))     inRange=false;
    lastNum=nextNum;
  }
  assertTrue("Calling nextInt (range) 100 times resulted in same number",someDifferent);
  assertTrue("Calling nextInt (range) resulted in a number outside of [0, range)",inRange);
}
